@model WagenparkMVC.Models.RegisterViewModel
@{
	ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	<div class="center jumbotron">
		<div class="row">
			@Html.AntiForgeryToken()
			<h3 class="login">Register</h3>
			@Html.ValidationSummary("", new {@class = "text-danger login"})
			<div>
				@Html.LabelFor(m => m.Email, new {@class = "login"})
				<div>
					@Html.TextBoxFor(m => m.Email, new {@class = "form-control login "})
				</div>
			</div>

			<div>
				@Html.LabelFor(m => m.UserName, new {@class = "login"})
				<div>
					@Html.TextBoxFor(m => m.UserName, new {@class = "form-control login "})
				</div>
			</div>
			<div>
				@Html.LabelFor(m => m.Password, new {@class = "login"})
				<div>
					@Html.PasswordFor(m => m.Password, new {@class = "form-control login"})
				</div>
			</div>
			<div>
				@Html.LabelFor(m => m.ConfirmPassword, new {@class = "login"})
				<div>
					@Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control login"})
				</div>
			</div>
			<div>
				<div class="col-md-offset-2 col-md-10 login">
					<input type="submit" class="btn btn-default" value="Register"/>
				</div>
			</div>
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}