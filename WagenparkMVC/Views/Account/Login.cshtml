@using System.Web.UI.WebControls
@using WagenparkMVC.Models
@model LoginViewModel
@{
	ViewBag.Title = "Log in";
}

<div class="center jumbotron">
	<div class="row">
		<div>

			<section id="loginForm">
				@using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
				{
					@Html.AntiForgeryToken()
					<h3 class="login">Log in</h3>
					@Html.ValidationSummary(true, "", new {@class = "text-danger login"})
					<div>
						@Html.LabelFor(m => m.UserName, new {@class = "login"})
						<div>
							@Html.TextBoxFor(m => m.UserName, new {@class = "form-control login"})
							@Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger login"})
						</div>
					</div>
					<div>
						@Html.LabelFor(m => m.Password, new {@class = "login"})
						<div>
							@Html.PasswordFor(m => m.Password, new {@class = "form-control login"})
							@Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger login"})
						</div>
					</div>
					<div>
						<div class="col-md-offset-2 col-md-10 login">
							<input id="login" type="submit" value="Log in" class="btn btn-default"/>
						</div>
					</div>
					@* Enable this once you have account confirmation enabled for password reset functionality
						<p>
							@Html.ActionLink("Forgot your password?", "ForgotPassword")
						</p>*@
				}
			</section>
		</div>
	</div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	@Styles.Render("~/Content/Login.css")
}