@model WagenparkMVC.Models.dealer

@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="table center layoutSettings jumbotron">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.dealernr)

		<div>
			@Html.LabelFor(model => model.naam, "Dealer naam", htmlAttributes: new { @class = "layoutSettings" })
			<div>
				@Html.EditorFor(model => model.naam, new { htmlAttributes = new { @class = "form-control layoutSettings" } })
				@Html.ValidationMessageFor(model => model.naam, "", new { @class = "text-danger layoutSettings" })
			</div>
		</div>
		<div class="layoutSettings">
			<input type="submit" value="Opslaan" class="btn btn-success" />

			<input value="Terug" class="btn btn-danger" onclick="location.href='@Url.Action("../autoes", "Index")'" />
		</div>
	</div>

	@section Scripts {
		@Scripts.Render("~/bundles/jqueryval")
		@Styles.Render("~/Content/main.css")
		@Styles.Render("~/Content/menu.css")
	}
}
