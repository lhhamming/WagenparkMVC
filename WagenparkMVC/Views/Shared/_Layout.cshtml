<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@Styles.Render("~/Content/Login")

</head>
<body>
<div id='cssmenu' class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a><img class="imgresize" src="../IMG/rocit.png"></a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Role Manager", "Index", "Roles")</li>
                    <li>@Html.ActionLink("Dealers", "../dealers", "Index")</li>
                    <li>@Html.ActionLink("Auto's", "../autoes", "Index")</li>
                    <li>@Html.ActionLink("Onderhoud", "../onderhouds", "Index")</li>
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        }
        else if (User.IsInRole("Dealer"))
        {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Auto's", "../autoes", "Index")</li>
                    <li>@Html.ActionLink("Onderhoud","../onderhouds","Index")</li>
                    <li>@Html.ActionLink("Werkplaatsen", "../werkplaats", "Index")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        }
        else
        {
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        }
    </div>
</div>
<div class="container body-content">
	@RenderBody()
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Styles.Render("~/Content/menu.css")
@RenderSection("scripts", required: false)
</body>
</html>