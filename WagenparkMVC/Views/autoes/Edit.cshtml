@model WagenparkMVC.Models.auto

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="table center layoutSettings jumbotron">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.kenteken)

        <div>
            @Html.LabelFor(model => model.merk, "Merk", htmlAttributes: new { @class = "layoutSettings" })
            <div>
                @Html.EditorFor(model => model.merk, new { htmlAttributes = new { @class = "form-control layoutSettings" } })
                @Html.ValidationMessageFor(model => model.merk, "", new { @class = "text-danger layoutSettings" })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.Type, "Model", htmlAttributes: new { @class = "layoutSettings" })
            <div>
                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control layoutSettings" } })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger layoutSettings" })
            </div>
        </div>

        <div>
            @Html.LabelFor(model => model.DEALER_DealerNr, "Dealer", htmlAttributes: new { @class = "layoutSettings" })
            <div>
                @Html.DropDownList("DEALER_dealernr", null, htmlAttributes: new { @class = "form-control layoutSettings" })
                @Html.ValidationMessageFor(model => model.DEALER_DealerNr, "", new { @class = "text-danger layoutSettings" })
            </div>
        </div>
		<div class="layoutSettings">
			<input type="submit" value="Opslaan" class="btn btn-success" />

			<input value="Terug" class="btn btn-danger" onclick="location.href='@Url.Action("../autoes", "Index")'"/>
		</div>
    </div>
}

<div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
	@Styles.Render("~/Content/main.css")
	@Styles.Render("~/Content/menu.css")
}
